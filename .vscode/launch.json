{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "FIRESTORE_EMULATOR_HOST": "127.0.0.1:8080",
        "LOG_LEVEL_MSG": "debug",
        "LOG_LEVEL_OBJ": "error"
      },
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["--config", "./.mocharc.json"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "script",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node",
      "env": {},
      "args": [
        "--project",
        "./tsconfig.scripts.json",
        // "./scripts/001-seed-products.ts",
        "./scripts/002-get-products.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
